<VBox alignment="CENTER" fillWidth="true" prefHeight="600" prefWidth="800" spacing="20" styleClass="content-root" stylesheets="@css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.javafx.webtrackly.controller.WebsiteAddController">

    <Label alignment="CENTER" styleClass="login-header" text="Add Website">
        <font>
            <Font name="Consolas Bold" size="28" />
        </font>
        <VBox.margin>
            <Insets top="30.0" />
        </VBox.margin>
    </Label>

    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="300.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         <RowConstraints />
        </rowConstraints>

        <children>
            <Button onAction="#addWebsite" prefHeight="32.0" prefWidth="82.0" styleClass="action-button" text="Add" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
            <TextField fx:id="websiteTextFieldName" prefHeight="34.0" prefWidth="202.0" promptText="Name" styleClass="search-ud-field" GridPane.halignment="CENTER" />
            <TextField fx:id="websiteTextFieldUrl" prefHeight="34.0" prefWidth="195.0" promptText="URL" styleClass="search-ud-field" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
            <TextField fx:id="websiteTextFieldDescription" prefHeight="34.0" prefWidth="238.0" promptText="Description" styleClass="search-ud-field" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
         <ComboBox fx:id="websiteComboBoxCategory" prefWidth="150.0" promptText="Category" styleClass="search-combo" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
        </children>
    </GridPane>

    <Pane prefHeight="100" VBox.vgrow="ALWAYS" />
</VBox>
