<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.javafx.webtrackly.controller.TrafficRecordController">

    <top>
        <fx:include source="menuBar.fxml" />
    </top>

    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <!-- Search Bar -->
            <VBox spacing="5" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
                <HBox alignment="CENTER" spacing="8">
                    <TextField fx:id="websiteSearchField" prefWidth="200" promptText="Enter website URL" />
                    <DatePicker fx:id="startDatePicker" promptText="Start Date" />
                    <DatePicker fx:id="endDatePicker" promptText="End Date" />
                    <Button fx:id="searchButton" text="Search" />
                </HBox>
            </VBox>

            <VBox alignment="CENTER" spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label prefWidth="156.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Traffic Comparison" />
                <BarChart fx:id="trafficComparisonChart" prefHeight="208.0" prefWidth="350">
                    <xAxis>
                        <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="LEFT" />
                    </yAxis>
                </BarChart>
            </VBox>


            <!-- PieChart for Traffic Distribution -->
            <VBox alignment="CENTER" spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Traffic Distribution by Source" />
                <PieChart fx:id="trafficDistributionChart" prefHeight="206.0" prefWidth="374.0" />
            </VBox>

            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>
    </center>

    <bottom>
        <TableView fx:id="trafficTable" prefHeight="276.0" prefWidth="800.0">
            <columns>
                <TableColumn fx:id="colTrafficID" prefWidth="120" text="Traffic ID" />
                <TableColumn fx:id="colWebsite" prefWidth="150" text="Website" />
                <TableColumn fx:id="colClicks" prefWidth="100" text="Clicks" />
                <TableColumn fx:id="colUserCount" prefWidth="120" text="Users" />
                <TableColumn fx:id="colTimeOfVisit" prefWidth="180" text="Time of Visit" />
                <TableColumn fx:id="colBounceRate" prefWidth="100" text="Bounce Rate" />
            </columns>
        </TableView>
    </bottom>

</BorderPane>
