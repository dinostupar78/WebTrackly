<VBox alignment="CENTER" fillWidth="true" prefHeight="600" prefWidth="800" spacing="20" styleClass="content-root" stylesheets="@css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.javafx.webtrackly.controller.UserEditController">

    <Label alignment="CENTER" styleClass="login-header" text="Edit User ">
        <font>
            <Font name="Consolas Bold" size="28" />
        </font>
        <VBox.margin>
            <Insets top="30.0" />
        </VBox.margin>
    </Label>

    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="300.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         <RowConstraints />
        </rowConstraints>

        <children>
            <DatePicker fx:id="userEditDatePickerBirth" prefHeight="31.0" prefWidth="245.0" promptText="Date of BIrth" styleClass="search-date-picker" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
            <Button onAction="#editUser" prefHeight="32.0" prefWidth="82.0" styleClass="action-button" text="Edit" GridPane.halignment="CENTER" GridPane.rowIndex="9" />
            <TextField fx:id="userEditTextFieldFirstName" prefHeight="34.0" prefWidth="202.0" promptText="First Name" styleClass="search-ud-field" GridPane.halignment="CENTER" />
            <ComboBox fx:id="userEditComboBoxWebsite" prefHeight="35.0" prefWidth="244.0" promptText="Website" styleClass="search-combo" GridPane.halignment="CENTER" GridPane.rowIndex="8" />
            <ComboBox fx:id="userEditComboBoxGender" prefHeight="35.0" prefWidth="247.0" promptText="Gender" styleClass="search-combo" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
            <TextField fx:id="userEditTextFieldLastName" prefHeight="34.0" prefWidth="202.0" promptText="Last Name" styleClass="search-ud-field" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
            <TextField fx:id="userEditTextFieldNationality" prefHeight="34.0" prefWidth="238.0" promptText="Nationality" styleClass="search-ud-field" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
            <TextField fx:id="userEditTextFieldUsername" prefHeight="34.0" prefWidth="238.0" promptText="Username" styleClass="search-ud-field" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
            <TextField fx:id="userEditTextFieldPassword" prefHeight="34.0" prefWidth="238.0" promptText="Password" styleClass="search-ud-field" GridPane.halignment="CENTER" GridPane.rowIndex="7" />
         <TextField fx:id="userEditTextFieldEmail" prefHeight="34.0" prefWidth="238.0" promptText="Email" styleClass="search-ud-field" GridPane.halignment="CENTER" GridPane.rowIndex="6" />
        </children>
    </GridPane>

    <Pane prefHeight="100" VBox.vgrow="ALWAYS" />
</VBox>
